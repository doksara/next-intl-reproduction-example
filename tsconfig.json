{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": ["./app/_components/*"],
      "@/hooks/*": ["./app/_hooks/*"],
      "@/layout/*": ["./app/_layout/*"],
      "@/lib/*": ["./app/_lib/*"],
      "@/providers/*": ["./app/_providers/*"],
      "@/styles/*": ["./app/_styles/*"],
      "@/translations/*": ["./app/_translations/*"],
      "@/utils/*": ["./app/_utils/*"],
      "@/styled-system/*": ["./styled-system/*"],
      "@/i18n/*": ["./i18n/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "styled-system"
  ],
  "exclude": ["node_modules"]
}
